@model IEnumerable<MvcPortfolioWebsite.Areas.CrudDemo.ViewModels.PersonViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}



<section id="crud-nav">
    <ul class="nav nav-pills">
        <li><a href="/CrudDemo/Ado/Index">Traditional ADO.NET</a></li>
        <li class="active"><a href="~/CrudDemo/Ef/Index">Entity Framework</a></li>
    </ul>
    <div id="crud-message" class="pull-right">
        @ViewBag.Message
    </div>
</section>

<section>
    <form action="Create" class="well">
        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" name="firstname" placeholder="Enter first name..." />
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastname" placeholder="Enter last name..." />
        </div>
        <button type="submit" class="btn btn-default">Create Entry</button>
    </form>

 
    <table class="table">
        <thead>
            <tr>

                <td>
                    Employee ID
                </td>
                <td>
                    First Name
                </td>
                <td>
                    Last Name
                </td>
                <td></td>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PersonId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PersonId })
                </td>
            </tr>
        }

    </table>

</section>



